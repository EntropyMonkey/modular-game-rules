<rules>
	<actors>
		<actor>
			<id>0</id>
			<label>Player</label>
			<!--The labels are intended as a placeholder for automatic name generation -->
			<type>Player</type>
		</actor>
		<actor>
			<id>1</id>
			<label>PlayerCamera</label>
			<type>PlayerCamera</type>
		</actor>
		
	</actors>
	
	<events>
		<event>
			<id>0</id>
			<label>KeyboardInput Space</label>
			<actorId>0</actorId>
			<type>KeyboardInput</type>
			<param name="InputKey">
				<type>KeyCode</type>
				<value>32</value>
			</param>
		</event>

		<event>
			<id>1</id>
			<label>MouseInput LeftClick</label>
			<actorId>0</actorId>
			<type>MouseInput</type>
			<param name="TrackedButton">
				<type>MouseInput+MouseButton</type>
				<value>0</value>
			</param>
			<param name="TrackedCamera">
				<type>PlayerCamera</type>
				<value>1</value>
			</param>
		</event>

		<event>
			<id>2</id>
			<label>MovedObject Player</label>
			<actorId>0</actorId>
			<type>ObjectMovedEvent</type>
		</event>
	</events>
	
	<reactions>
		<reaction>
			<id>0</id>
			<label>On MouseInput MoveObject Player</label>
			<listenedEventId>0</listenedEventId>
			<actorId>0</actorId>
			<type>MoveObject</type>
			<param name="MoveDirection">
				<type>Direction</type>
				<value>0</value>
			</param>		
		</reaction>
		<reaction>
			<id>1</id>
			<label>On MoveObject Player FollowObject</label>
			<listenedEventId>2</listenedEventId>
			<actorId>1</actorId>
			<type>FollowObject</type>
			<param name="FollowSpeed">
				<type>System.Single</type>
				<value>10</value>
			</param>
			<param name="Offset">
				<type>Vector3</type>
				<value>0 5 -5</value>
			</param>
			<param name="FixedToObject">
				<type>Actor</type>
				<value>-1</value>
			</param>
		</reaction>
	</reactions>
</rules>