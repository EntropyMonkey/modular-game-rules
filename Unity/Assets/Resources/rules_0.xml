<rules>
	<actors>
		<actor>
			<id>0</id>
			<label>Player</label>
			<!--The labels are intended as a placeholder for automatic name generation -->
			<type>Player</type>
			<param name="StartMovementBehaviour">
				<type>MovementBehaviour</type>
				<value>1</value>
			</param>
		</actor>
		<actor>
			<id>1</id>
			<label>PlayerCamera</label>
			<type>PlayerCamera</type>
		</actor>

	</actors>

	<events>
		<event>
			<id>0</id>
			<label>KeyboardInput A</label>
			<actorId>0</actorId>
			<type>KeyboardInput</type>
			<param name="InputKey">
				<type>KeyCode</type>
				<value>97</value>
			</param>
		</event>

		<event>
			<id>1</id>
			<label>KeyboardInput W</label>
			<actorId>0</actorId>
			<type>KeyboardInput</type>
			<param name="InputKey">
				<type>KeyCode</type>
				<value>119</value>
			</param>
		</event>

		<event>
			<id>2</id>
			<label>KeyboardInput S</label>
			<actorId>0</actorId>
			<type>KeyboardInput</type>
			<param name="InputKey">
				<type>KeyCode</type>
				<value>115</value>
			</param>
		</event>

		<event>
			<id>3</id>
			<label>KeyboardInput D</label>
			<actorId>0</actorId>
			<type>KeyboardInput</type>
			<param name="InputKey">
				<type>KeyCode</type>
				<value>100</value>
			</param>
		</event>

		<event>
			<id>4</id>
			<label>MouseInput LeftClick</label>
			<actorId>0</actorId>
			<type>MouseInput</type>
			<param name="TrackedButton">
				<type>MouseInput+MouseButton</type>
				<value>0</value>
			</param>
			<param name="TrackedCamera">
				<type>PlayerCamera</type>
				<value>1</value>
			</param>
		</event>

		<event>
			<id>5</id>
			<label>MovedObject Player</label>
			<actorId>0</actorId>
			<type>ObjectMovedEvent</type>
		</event>
	</events>

	<reactions>
		<reaction>
			<id>0</id>
			<label>On MouseInput MoveObject Player</label>
			<listenedEventId>0</listenedEventId>
			<actorId>0</actorId>
			<type>MoveObject</type>
			<param name="MoveDirection">
				<type>Direction</type>
				<value>2</value>
			</param>
		</reaction>
		<reaction>
			<id>1</id>
			<label>On MouseInput MoveObject Player</label>
			<listenedEventId>1</listenedEventId>
			<actorId>0</actorId>
			<type>MoveObject</type>
			<param name="MoveDirection">
				<type>Direction</type>
				<value>0</value>
			</param>
		</reaction>
		<reaction>
			<id>2</id>
			<label>On MouseInput MoveObject Player</label>
			<listenedEventId>2</listenedEventId>
			<actorId>0</actorId>
			<type>MoveObject</type>
			<param name="MoveDirection">
				<type>Direction</type>
				<value>1</value>
			</param>
		</reaction>
		<reaction>
			<id>3</id>
			<label>On MouseInput MoveObject Player</label>
			<listenedEventId>3</listenedEventId>
			<actorId>0</actorId>
			<type>MoveObject</type>
			<param name="MoveDirection">
				<type>Direction</type>
				<value>3</value>
			</param>
		</reaction>
		<reaction>
			<id>4</id>
			<label>On MoveObject Player FollowObject</label>
			<listenedEventId>5</listenedEventId>
			<actorId>1</actorId>
			<type>FollowObject</type>
			<param name="FollowSpeed">
				<type>System.Single</type>
				<value>5</value>
			</param>
			<param name="Offset">
				<type>Vector3</type>
				<value>0 7 -10</value>
			</param>
			<param name="FixedToObject">
				<type>Actor</type>
				<value>-1</value>
			</param>
		</reaction>
	</reactions>
</rules>